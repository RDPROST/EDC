@model EDCC.Models.Mark

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить оценку</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MarkStudent" class="control-label">Оценка</label>
                <input asp-for="MarkStudent" class="form-control" />
                <span asp-validation-for="MarkStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonId" class="control-label">Урок</label>
                <select asp-for="LessonId" class ="form-control" asp-items="ViewBag.LessonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Ученик</label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

