@model EDCC.Models.Lesson

@{
    ViewData["Title"] = "Создание урока";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание урока</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TimeSlot" class="control-label">Номер пары</label>
                <input asp-for="TimeSlot" class="form-control" />
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="GroupId" class="control-label">Группа</label>
                <select asp-for="GroupId" class ="form-control" asp-items="ViewBag.GroupId"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserId" class="control-label">Преподаватель</label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SubjectId" class="control-label">Предмет</label>
                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FileId" class="control-label">Файл</label>
                <input type="file" asp-for="File" class="form-control"></input>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

